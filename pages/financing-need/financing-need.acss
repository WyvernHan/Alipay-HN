.top-filter {
    background: #fff;
    border-bottom: #e9e9e9 solid 1rpx;
    padding: 20rpx 20rpx;
    display: flex;
    align-items: center;
}
.top-filter .search {
    background: #fafafa;
    border-radius: 30rpx;
    height: 60rpx;
    flex: 1;
    display: flex;
    padding: 0 20rpx;
    font-size: 36rpx;
}
.am-search {
    flex:1
}
.top-filter .search text {
     height: 60rpx;
     line-height: 60rpx;
     vertical-align: middle;
     color: #d4d4d4;
}
.top-filter .search input {
    background: none;
    height: 60rpx;
    line-height: 60rpx;
    vertical-align: middle;
}
.top-filter .filter-icon {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #48a5f5;
    text-align: right;
    font-size: 36rpx;
    position: relative;
    right: 30rpx;
}
.btn-container {
    background: #fff;
    border-bottom: #eee solid 1rpx;
    text-align: right;
    padding: 20rpx 40rpx;
}

.btn-container .filter {
    border: none;
    color: #40a8ff;
}
.extra {
  background-image: url('https://gw.alipayobjects.com/zos/rmsportal/dOfSJfWQvYdvsZiJStvg.svg');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: right center;
  opacity: 0.2;
  height: 20px;
  width: 20px;
  padding-left: 10px;
}
.fa-calendar {
    color: #999;
    font-size:32rpx; 
}

