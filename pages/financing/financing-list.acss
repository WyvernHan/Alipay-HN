.am-title {
  padding-top: 24rpx;
 
}
.container {
  padding: 24rpx;
}
.changeColor {
  font-size: 30px;
  color: #f32600;
}
.row {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background-color: white;
}

.row-title {
  flex: 1;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  font-size: 34rpx;
  color: #000;
}

.row-extra {
  flex-basis: initial;
  font-size: 32rpx;
  color: #888;
  margin-right: 12px;
}

.tags {
    background: #fff;
    padding:15rpx 25rpx;
    white-space: nowrap;
}
.tags::after {
    content: " ";
    display: block;
    clear: both;
}
.tag {
    margin-right: 15rpx;
    display: inline-block;
}
.am-tag-text {
    align-items: center;
}
.am-tag-text text {
    font-size: 30rpx;
    position: relative;
    top: 2px;
    margin-left: 10rpx;
}

























